log4j.rootLogger=INFO,sysout,rollingFile

# sysout log configuration
log4j.appender.sysout=org.apache.log4j.ConsoleAppender
log4j.appender.sysout.Target=System.out
log4j.appender.sysout.Threshold=DEBUG
log4j.appender.sysout.layout=org.apache.log4j.PatternLayout
log4j.appender.sysout.layout.ConversionPattern=[%d{ISO8601}] %5p (%F:%L) - %M() :: %m%n
#log4j.appender.sysout.layout.ConversionPattern=%d{dd.MM.yyyy HH:mm:ss} %5p (%F:%L) - %m%n
												

log4j.appender.rollingFile=org.apache.log4j.DailyRollingFileAppender

#provide path to your location where you want logs created. For now its logs folder of   tomcat.
log4j.appender.rollingFile.File=target/angular.log
log4j.appender.rollingFile.Append=false

log4j.appender.rollingFile.Threshold=DEBUG

log4j.appender.rollingFile.DatePattern='.'yyy-MM-dd
log4j.appender.rollingFile.layout=org.apache.log4j.PatternLayout
log4j.appender.rollingFile.layout.ConversionPattern=[%d{ISO8601}] %5p (%F:%L) - %M() :: %m%n

log4j.logger.com.dennis.angularjs.controller=DEBUG

# Spring
log4j.logger.org.springframework.web.context.ContextLoader=INFO

# Hibernate
log4j.logger.org.hibernate=DEBUG, rollingFile
#log4j.logger.org.hibernate.SQL=DEBUG

# Camel
log4j.logger.org.apache.camel=INFO

# Ldap
log4j.logger.org.springframework.security.ldap=INFO

log4j.logger.LOG4J=INFO
log4j.logger.SLF4J=WARN
log4j.logger.JCL=INFO